/* Fix flashcard flip - ensure fixed height for proper 3D rotation */
.flashcard-inner {
  position: relative;
  width: 100%;
  height: 450px; /* Fixed height instead of min-height */
  text-align: center;
  transition: transform 0.6s;
  transform-style: preserve-3d;
  cursor: pointer;
}

.flashcard-front,
.flashcard-back {
  position: absolute;
  width: 100%;
  height: 450px; /* Fixed height instead of min-height */
  backface-visibility: hidden;
  border-radius: 16px;
  padding: 40px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  border: 3px solid #2e7d32;
  overflow: hidden; /* Prevent overflow from breaking flip */
}
